{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/lib",
    "removeComments": false,
    "strict": true,
    "stripInternal": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*.ts"
  ]
}
